<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="220dp"
    android:background="@drawable/background_add1"
    android:paddingTop="80dp">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/user_add"
        android:layout_margin="10dp"/>

    <TextView
        android:text=" Thông tin chi tiết"
        android:textColor="#B92D82C5"
        android:textSize="17dp"
        android:padding="3dp"
        android:textStyle="bold"
        android:id="@+id/Thongtin"
        android:background="@drawable/background_add1"
        android:layout_marginTop="5dp"
        android:layout_below="@id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:id="@+id/txtUsername"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Vũ Cường"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Thongtin"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:id="@+id/txtTinnhan"
        android:textSize="15dp"
        android:text="How are you ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUsername"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:id="@+id/txtThongtin"
        android:textSize="15dp"
        android:text="đã gửi vào lúc "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTinnhan"
        android:layout_marginLeft="10dp" />


</RelativeLayout>