<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.InfoGroupActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/icongroup"
        android:background="@drawable/background_vientron"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/toolbar"
        android:id="@+id/profile_image"/>

    <TextView
        android:id="@+id/textviewTenGroup"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_image"
        android:layout_width="wrap_content"
        android:text="Nhóm A2 Auto depzai"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_below="@id/textviewTenGroup"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:text="Thêm thành viên"
        android:id="@+id/txtThemthanhvien"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/txtThemthanhvien"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:text="Tất cả thành viên"
        android:id="@+id/txtTatcathanhvien"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/txtTatcathanhvien"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textColor="#F60202"
        android:text="Rời khỏi nhóm"
        android:id="@+id/txtRoikhoinhom"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>